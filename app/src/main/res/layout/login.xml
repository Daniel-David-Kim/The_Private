<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    tools:context=".MainActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal|bottom"
        android:layout_weight="1"
        >
        <ImageView
            android:layout_width="600px"
            android:layout_height="200px"
            android:src="@drawable/logo2"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:paddingTop="27dp"
        android:paddingBottom="58dp"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:weightSum="19"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="12"
            android:background="@drawable/radius_white_little"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            >
            <EditText
                android:id="@+id/user_id"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="ID"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_30"
                android:backgroundTint="@color/white"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_30"
                />
            <EditText
                android:id="@+id/user_pw"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="PW"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_30"
                android:backgroundTint="@color/white"
                />
        </LinearLayout>
        <Button
            android:layout_weight="7"
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="로그인"
            android:textSize="15dp"
            android:textStyle="bold"
            android:background="@drawable/dip_color_btn"
            android:textColor="@color/white"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:padding="45dp"
        android:gravity="center"
        >
        <TextView android:id="@+id/signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가입하기"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:layout_marginBottom="15dp"
            />
        <TextView
            android:id="@+id/findidpw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID/PW 찾기"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="17dp"
            />
    </LinearLayout>

</LinearLayout>