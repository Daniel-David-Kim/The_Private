<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:weightSum="20"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:weightSum="20"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="17"
            android:weightSum="10"
            >
            <TextView
                android:id="@+id/edname_title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="수정하실 이름이 무엇인가요?"
                android:textSize="19dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_weight="1.3"
                />
            <TextView
                android:id="@+id/edname_content"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="이용하시면서 닉네임으로 사용하게 됩니다!"
                android:layout_weight="1"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                >
                <EditText
                    android:id="@+id/edname_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name"
                    android:textAlignment="center"
                    />
            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                />
            <Button
                android:id="@+id/edname_submit"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/main_color_btn"
                android:textColor="@color/white"
                android:text="EDIT"
                android:layout_weight="1.2"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>